@model PartnerWeb.Models.InsurancePolicy

@{
    ViewBag.Title = "Create";
}

<div class="d-flex justify-content-center mb-4">
    <h2>Kreiraj novu policu</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.PolicyNumber)
                @Html.EditorFor(m => m.PolicyNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PolicyNumber, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.PolicyPrice)
                @Html.EditorFor(m => m.PolicyPrice, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.PolicyPrice, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.PartnerId, "Partner")
                @Html.DropDownListFor(m => m.PartnerId, (List<SelectListItem>)ViewBag.Partners, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.PartnerId, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-center mt-4">
                <input type="submit" value="Kreiraj" class="btn btn-success btn-lg rounded" />
            </div>
        </div>
    </div>
}

<div class="mt-3 d-flex justify-content-start">
    @Html.ActionLink("Povratak", "Index", "Partner", null, new { @class = "btn btn-primary rounded", style = "text-decoration:none; color:white" })
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
